@model CAFE_VIP.Models.LoginModels

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

   
<div class="signin_wthree">
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        @Html.ValidationSummary(false, "", "error");
        <form>
            <div class="group">
                <label for="user" class="label">Username</label>
                @Html.TextBoxFor(model => model.UserName, new { @class = "input", @autofocus = "autofocus" })
                @*<input id="user" type="text" class="input" >*@
            </div>
            <div class="group">
                <label for="pass" class="label">Password</label>
                @Html.PasswordFor(model => model.PassWord, new { @class = "input" })
                @*<input id="pass" type="password" class="input" data-type="password" required>*@
            </div>
            <div class="group">
                <input id="check" type="checkbox" class="check" checked>
                <label for="check">
                    <span class="icon"></span> Keep me Signed in
                </label>
            </div>
            <div class="group">
                <input type="submit" class="button" value="Sign In">
            </div>
            <div class="hr"></div>
            <div class="foot-lnk">
                <h2><a href="#">Forgot Password?</a></h2>
            </div>
        </form>
    }
</div>


