
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        Sản Phẩm
    </title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/paper-dashboard.css" rel="stylesheet" />
    <link href="~/Content/css/admin.css" rel="stylesheet" />
</head>

<body class="">
    <div class="wrapper ">
        <div class="sidebar" data-color="white" data-active-color="danger">
            <div class="logo">
                <a href="#" class="simple-text logo-mini">
                    <div class="logo-image-small">
                        <img src="/Content/images/logo-small.png">
                    </div>
                </a>
                <a href="#" class="simple-text logo-normal">
                    Coffee Manager
                </a>
            </div>
            <div class="sidebar-wrapper">

                <ul class="nav">
                    <li class="active ">

                        @Html.ActionLink("HOME", "HomeAdmin", "Admin", null, new { @class = "click" })
                    </li>
                    <li>
                        @Html.ActionLink("PRODUCT", "Index", "Product", null, new { @class = "click" })
                    </li>
                    <li >

                        @Html.ActionLink("CATELOGY", "Index", "Catelogy", null, new { @class = "click" })
                    </li>
                    <li>
                        @Html.ActionLink("CUSTOMER", "Index", "CUSTOMERs", null, new { @class = "click" })
                    </li>
                    <li >

                        @Html.ActionLink("PERSON", "Index", "People", null, new { @class = "click" })
                    </li>
                    <li>
                        @Html.ActionLink("ORDER","Index", "Order", null, new { @class = "click" })
                    </li>
                    <li >

                        @Html.ActionLink("RESOURCE", "Index", "RESOURCES", null, new { @class = "click" })
                    </li>
                    
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <div class="navbar-toggle">
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-bar bar1"></span>
                                <span class="navbar-toggler-bar bar2"></span>
                                <span class="navbar-toggler-bar bar3"></span>
                            </button>
                        </div>
                        <a class="navbar-brand" href="index.html">Coffee Hello</a>
                    </div>
                    <div class="collapse navbar-collapse justify-content-end" id="navigation">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a href="admin.html" class="nav-link btn-rotate">
                                    <p>
                                        <span class="d-lg-none d-md-block">Sản Phẩm</span>
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="list.html" class="nav-link btn-rotate">
                                    <p>
                                        <span class="d-lg-none d-md-block">List khách hàng</span>
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="index.html" class="nav-link btn-rotate">
                                    <p>
                                        <span class="d-lg-none d-md-block">Coffee Hello</span>
                                    </p>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            @RenderBody()
        </div>
        <!-- Footer -->
        <footer class="footer footer-black  footer-white ">
            <div class="container-fluid">
                <div class="row">
                    <nav class="footer-nav">
                        <ul>
                            <li>@Html.ActionLink("Coffee Hello", "Index", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </footer>
    </div>
    <!--   Core JS Files   -->
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/plugins/ckfinder/ckfinder.js"></script>
</body>

</html>



